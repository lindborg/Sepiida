package sepiida.enemies {	import sepiida.Movement;	import flash.events.Event;		public class Enemy extends Movement {		public function Enemy() {			addEventListener(Event.ADDED,onAdded);			speedLeft = Math.floor(Math.random()*7)+7;			frictionLeft = 0;			scaleX = scaleY = Math.random()+.2;		}		private function onAdded(event:Event):void {			x = stage.stageWidth+width;			y = Math.floor(Math.random()*stage.stageHeight);		}	}}